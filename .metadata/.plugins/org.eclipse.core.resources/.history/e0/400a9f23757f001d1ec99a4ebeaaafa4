/*Modalities of an arrangement describing the limits that are imposed 

e.g. minimum deposit amount, maximal withdrawal amount, maximum position...*/
package org.museframework.bian.classes;

public class ArrangementLimit {
    /*Classification of the subject of the limit 

e.g. maximum deposit amount */
    private String limitType;

    /*The actual limit to be applied according to limit type

e.g. max amount of 500â‚¬ per semester*/
    private String limit;

    /*Specification for the calculation and enforcing of the limit.*/
    private String limitModalities;

    public void setLimitType(String limitType) {
        this.limitType = limitType;
    }

    public String getLimitType() {
        return limitType;
    }

    public void setLimit(String limit) {
        this.limit = limit;
    }

    public String getLimit() {
        return limit;
    }

    public void setLimitModalities(String limitModalities) {
        this.limitModalities = limitModalities;
    }

    public String getLimitModalities() {
        return limitModalities;
    }
}