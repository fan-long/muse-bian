/*Arrangement that specifies the buying and selling a security at the best available price in the current market.
*/
package org.museframework.bian.classes;

public class SecurityOrderArrangement {
    /*The market where the security to be traded*/
    private Market tradeMarket;

    /*The security to be traded*/
    private Security tradeSecurity;

    /*The price of security to be traded*/
    private String tradePrice;

    /*The volume of security to be bought or sold*/
    private String tradeAmount;

    public void setTradeMarket(Market tradeMarket) {
        this.tradeMarket = tradeMarket;
    }

    public Market getTradeMarket() {
        return tradeMarket;
    }

    public void setTradeSecurity(Security tradeSecurity) {
        this.tradeSecurity = tradeSecurity;
    }

    public Security getTradeSecurity() {
        return tradeSecurity;
    }

    public void setTradePrice(String tradePrice) {
        this.tradePrice = tradePrice;
    }

    public String getTradePrice() {
        return tradePrice;
    }

    public void setTradeAmount(String tradeAmount) {
        this.tradeAmount = tradeAmount;
    }

    public String getTradeAmount() {
        return tradeAmount;
    }
}