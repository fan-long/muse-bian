/*Swagger definition: An agreement between a debtor and a creditor allowing the creditor to instruct the bank to debit the debtors account

Authorization in favour of the creditor given by the debtor to debit its own account. (ISO20022)*/
package org.museframework.bian.classes;

public class DirectDebitMandate {
    /**/
    private String directDebitMandateIdentification;

    /**/
    private String directDebitPurpose;

    /**/
    private String directDebitServiceConfiguration;

    /*Reference to the account that can be used a source for the claimed amount*/
    private String directDebitSourceAccount;

    public void setDirectDebitMandateIdentification(String directDebitMandateIdentification) {
        this.directDebitMandateIdentification = directDebitMandateIdentification;
    }

    public String getDirectDebitMandateIdentification() {
        return directDebitMandateIdentification;
    }

    public void setDirectDebitPurpose(String directDebitPurpose) {
        this.directDebitPurpose = directDebitPurpose;
    }

    public String getDirectDebitPurpose() {
        return directDebitPurpose;
    }

    public void setDirectDebitServiceConfiguration(String directDebitServiceConfiguration) {
        this.directDebitServiceConfiguration = directDebitServiceConfiguration;
    }

    public String getDirectDebitServiceConfiguration() {
        return directDebitServiceConfiguration;
    }

    public void setDirectDebitSourceAccount(String directDebitSourceAccount) {
        this.directDebitSourceAccount = directDebitSourceAccount;
    }

    public String getDirectDebitSourceAccount() {
        return directDebitSourceAccount;
    }
}